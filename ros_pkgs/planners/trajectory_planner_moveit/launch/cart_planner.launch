<launch>
	<!-- load the moveit environment -->
	<include file="$(find uibk_robot_moveit_config)/launch/demo.launch"/>
	
	<!-- adjust the planner parameters -->
	<param name="max_points_in_trajectory" value="100" />
	<param name="max_planning_attempts" value="10" />
	<param name="max_planning_time" value="5" />
	<param name="tolerance_in_position" value="0.01" />
	<param name="tolerance_in_orientation" value="0.01" />
	<!-- choose for which frames you wish to plan -->
    <param name="arm_name" value="right_arm" />
    <param name="base_frame_for_goal" value="world_link" />
	<param name="plan_for_frame" value="right_sdh_palm_link" />

	<remap from="/joint_states" to="/golem/joint_states"/>
	<!-- load the node that implements the /trajectory_planning_srv -->
	<node name="move_to_cart_goal" pkg="trajectory_planner_moveit" type="cart_planner_node" respawn="true" output="screen"/>

</launch>